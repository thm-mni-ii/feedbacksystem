{
  "problemMatcher": [
    {
      "owner": "validate-api-docs",
      "pattern": [
        {
          "regexp": "^<file name=\"..\\/..\\/..\\/(.*)\">$",
          "file": 1
        },
        {
          "regexp": "^<error\\s+line=\"(\\d+)\"\\s+column=\"(\\d+)\"\\s+severity=\"(error|warning|info)\"\\s+message=\"(.*)\"\\s+source=\"(.*)\"\\s+\\/>$",
          "line": 1,
          "column": 2,
          "severity": 3,
          "message": 4,
          "code": 5,
          "loop": true
        }
      ]
    }
  ]
}
